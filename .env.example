# Required: OpenAI API key
OPENAI_API_KEY=

# Optional: App password to gate access (leave blank to disable)
# APP_PASSWORD=

# Optional: SerpAPI key for search-based context enrichment in Logical Fallacy mode
# Sign up at https://serpapi.com/ (free tier available) and paste your key here.
SERPAPI_API_KEY=

# Optional: Auth cookie settings (only if APP_PASSWORD is set)
# APP_AUTH_COOKIE_NAME=missy_auth
# APP_AUTH_SIGNATURE_KEY=change-me
# APP_AUTH_EXPIRY_DAYS=30

# Optional: Override OpenAI model/temperature
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TEMPERATURE=0.8
